{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/backend",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "../src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}